{
  "manifest_version": 3,
  "name": "YouTube Summarizer with Perplexity",
  "version": "1.1.0",
  "description": "Adds a button to YouTube videos to generate a summary using Perplexity.",
  "permissions": ["activeTab", "tabs", "storage", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
